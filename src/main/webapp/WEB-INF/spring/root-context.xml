<bean class="org.mybatis.spring.mapper.MapperScannerConfigurer">
  <property name="basePackage" value="com.prueba.mappers" />
</bean> 


	<!--  <context:annotation-config />	 -->
	 <context:component-scan base-package="com.prueba" />


 

</beans>
